{
  "compilerOptions": {
    "module": "es2015",
    "target": "es2017",
    "baseUrl": "./",
    "paths": {
      "@app/": ["src/app"],
      "@store/": ["src/store/*"],
      "@styles/": ["src/assets/styles/*"],
      "@images/": ["src/assets/images/*"],
      "@components/": ["src/components/*"]
    }
  },
  "files": [
    "src/**/*.js",
    "src/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
